{
  "name": "tester",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bddgen": "bddgen",
    "test": "bddgen && playwright test",
    "test:headed": "bddgen && playwright test --headed",
    "test:integration": "bddgen && playwright test --grep @integration",
    "test:e2e": "bddgen && playwright test --grep @e2e",
    "test:nightly": "BDD_TAGS='@nightly' bddgen && playwright test",
    "test:nightly:headed": "BDD_TAGS='@nightly' bddgen && playwright test --headed",
    "test:smoke": "BDD_TAGS='@smoke' bddgen && playwright test",
    "codegen": "graphql-codegen --config codegen.ts",
    "allure:generate": "allure awesome allure-results -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "cp -r allure-report/history allure-results/history 2>/dev/null || true && bddgen && playwright test && npm run allure:generate",
    "lint:scripts": "shellcheck ../scripts/*.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "allure": "^3.1.0",
    "allure-playwright": "^3.2.2",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "playwright-bdd": "^8.4.2",
    "shellcheck": "^3.1.0",
    "typescript": "^5.9.3"
  }
}
